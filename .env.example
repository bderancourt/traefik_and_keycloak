# Traefik + Keycloak HTTPS Setup - Environment Variables
# Copy this file to .env and update the values

# Database Configuration
KEYCLOAK_DB_PASSWORD=your_secure_db_password_here

# Keycloak Admin Configuration  
KEYCLOAK_ADMIN_PASSWORD=your_admin_password_here

# OIDC Client Configuration
KEYCLOAK_CLIENT_SECRET=demo-app-secret

# SSL Certificate Paths (relative to project root)
SSL_CERT_PATH=./traefik/certs/localhost.crt
SSL_KEY_PATH=./traefik/certs/localhost.key

# Service Ports (internal)
TRAEFIK_PORT=443
KEYCLOAK_PORT=8443
DEMO_APP_PORT=3443
DB_PORT=5432

# Domain Configuration (for development)
BASE_DOMAIN=localhost
APP_SUBDOMAIN=app
KEYCLOAK_SUBDOMAIN=keycloak
TRAEFIK_SUBDOMAIN=traefik

# Security Headers (optional customization)
HSTS_MAX_AGE=31536000
FRAME_DENY=true
CONTENT_TYPE_NOSNIFF=true

# Logging Configuration
LOG_LEVEL=INFO
TRAEFIK_LOG_LEVEL=INFO
KEYCLOAK_LOG_LEVEL=INFO

# Development Settings
NODE_ENV=development
DEBUG=false
SSL_VERIFICATION=false